# Database Configuration
DATABASE_URL="postgresql://user:password@db:5432/tip?schema=public"

# Keycloak Configuration
KEYCLOAK_BASE_URL="http://localhost:8888"
KEYCLOAK_REALM="tip-realm"
KEYCLOAK_CLIENT_ID="tip-backend"
KEYCLOAK_CLIENT_SECRET="your-client-secret"

# MinIO Configuration
MINIO_ENDPOINT="localhost"
MINIO_PORT=9000
MINIO_ACCESS_KEY="miniouser"
MINIO_SECRET_KEY="miniopassword"
MINIO_BUCKET_NAME="tip-artifacts"

# Vector Database Configuration (for pgvector)
VECTOR_DB_ENABLED=true

# OpenAI Configuration (for embeddings)
OPENAI_API_KEY="your-openai-api-key"
OPENAI_MODEL="text-embedding-ada-002"

# Application Configuration
NODE_ENV="development"
PORT=3000
JWT_SECRET="TIP_SecureJWT_Key_2024_Production_Ready_Secret_12345"
JWT_REFRESH_SECRET="TIP_SecureRefresh_Token_Key_2024_Production_Ready_Secret_67890"

# Email Configuration (MailHog)
SMTP_HOST="mailhog"
SMTP_PORT=1025
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM="noreply@tip-platform.gov"
SMTP_SECURE=false

# Registration Configuration
ALLOW_SELF_REGISTRATION=true
ADMIN_APPROVAL_REQUIRED=true
EMAIL_VERIFICATION_REQUIRED=true
FIRST_USER_IS_ADMIN=true
FRONTEND_URL=http://localhost:5173

# Feature Flags
ENABLE_VECTOR_SEARCH=true
ENABLE_AI_FEATURES=true
ENABLE_AUDIT_LOGGING=true
ENABLE_SECURITY_SCANNING=true

# Security Configuration
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001"
CORS_ENABLED=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# Development Authentication Bypass
AUTH_BYPASS=true

# Monitoring Configuration
LOG_LEVEL="info"
ENABLE_METRICS=true
METRICS_PORT=9090