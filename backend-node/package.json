{
  "name": "backend-node",
  "version": "1.0.0",
  "description": "Node.js backend for TIP",
  "main": "src/index.ts",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --exit-child src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:security": "jest --testNamePattern=\"Security|security\"",
    "test:performance": "jest --testNamePattern=\"Performance|performance\"",
    "test:penetration": "jest --testNamePattern=\"Penetration|penetration\"",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:generate": "prisma generate",
    "db:seed": "ts-node prisma/seed/seed.ts",
    "db:reset": "prisma migrate reset --force",
    "db:studio": "prisma studio",
    "db:push": "prisma db push"
  },
  "dependencies": {
    "@fastify/auth": "^4.3.0",
    "@fastify/cors": "^8.3.0",
    "@fastify/jwt": "^7.2.0",
    "@fastify/rate-limit": "^8.0.3",
    "@prisma/client": "^6.14.0",
    "bcryptjs": "^2.4.3",
    "crypto": "^1.0.1",
    "fastify": "^4.21.0",
    "fastify-zod": "^1.4.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.8",
    "otplib": "^12.0.1",
    "qrcode": "^1.5.3",
    "uuid": "^9.0.1",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.4.9",
    "@types/nodemailer": "^6.4.14",
    "@types/qrcode": "^1.5.5",
    "@types/uuid": "^9.0.7",
    "jest": "^29.5.0",
    "prisma": "^6.14.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  },
  "prisma": {
    "seed": "ts-node prisma/seed/seed.ts"
  }
}
