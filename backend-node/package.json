{
  "name": "backend-node",
  "version": "1.0.0",
  "description": "Node.js backend for TIP",
  "main": "src/index.ts",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --exit-child src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:generate": "prisma generate",
    "db:seed": "ts-node prisma/seed/seed.ts",
    "db:reset": "prisma migrate reset --force",
    "db:studio": "prisma studio",
    "db:push": "prisma db push"
  },
  "dependencies": {
    "@fastify/auth": "^4.3.0",
    "@fastify/cors": "^8.3.0",
    "@fastify/jwt": "^7.2.0",
    "@prisma/client": "^6.14.0",
    "fastify": "^4.21.0",
    "fastify-zod": "^1.4.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/node": "^20.4.9",
    "prisma": "^6.14.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  },
  "prisma": {
    "seed": "ts-node prisma/seed/seed.ts"
  }
}
