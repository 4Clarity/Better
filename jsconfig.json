{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "target": "es2015",
    "lib": ["es2015", "es2016", "es2017", "es2018", "es2019", "es2020", "dom"],
    "sourceMap": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "paths": {
      "*": ["node_modules/*", "types/*"]
    },
    "allowJs": true,
    "checkJs": false
  },
  "exclude": ["node_modules", "dist", "build"]
}